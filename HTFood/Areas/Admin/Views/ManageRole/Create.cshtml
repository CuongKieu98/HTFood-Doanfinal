@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole

@{

    ViewBag.Title = "Tạo role";

     Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin1.cshtml";

}
<link href="~/assets/css/create.css" rel="stylesheet" />

<title>Tạo Role</title>
<div class="block-header">
    <div class="row">
        <div class="col-lg-12 col-md-6 col-sm-7">
            <h2>Danh sách quyền</h2>
            <ul class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index","Admin")">Trang chủ</a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("Index","ManageRole")">Quản lý quyền</a></li>
                <li class="breadcrumb-item active">Tạo Role</li>
            </ul>
        </div>
    </div>


    <!--asas-->
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="row clearfix">
            <div class="col-lg-8">
                <div class="card">
                    <div class="header">
                        <h2>TẠO THÀNH VIÊN QUẢN TRỊ</h2>
                        <ul class="header-dropdown m-r--5">
                            <li class="dropdown">
                                <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"> <i class="zmdi zmdi-more-vert"></i> </a>
                                <ul class="dropdown-menu pull-right">
                                    <li><a href="javascript:void(0);">Action</a></li>
                                    <li><a href="javascript:void(0);">Another action</a></li>
                                    <li><a href="javascript:void(0);">Something else</a></li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                    <div class="body">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <form id="form_advanced_validation" method="POST" novalidate="novalidate">

                            <div class="row clearfix">

                                <div class="col-sm-8">
                                    <div class="input-group icon before_span">
                                        <span class="input-group-addon">
                                            <i class="material-icons">folder_special</i>
                                        </span>
                                        <div class="form-line">
                                            <input type="text" value="" name="Id" class="form-control date" maxlength="50" placeholder="Id role" required="" aria-required="true">
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <div class="row clearfix">
                                <div class="col-sm-8">
                                    <div class="input-group icon before_span">
                                        <span class="input-group-addon">
                                            <i class="material-icons">business_center</i>
                                        </span>
                                        <div class="form-line">
                                            <input type="text" value="" name="Name" maxlength="50" minlength="6" class="form-control date" placeholder="Tên quyền" required="" aria-required="true">
                                        </div>
                                    </div>
                                </div>

                            </div>


                            <button type="submit" class="btn btn-primary">Tạo role</button>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
</div>