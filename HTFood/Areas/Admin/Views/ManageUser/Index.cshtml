@using HTFood.Models;

@model IEnumerable<ApplicationUser>

@{

    ViewBag.Title = "Quản lý thành viên";

    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin1.cshtml";

}
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<link href="~/assets/css/dataTables.bootstrap4.min.css" rel="stylesheet" />

<title>Thành viên quản trị</title>
<!--Header-->
<div class="block-header">
    <div class="row">
        <div class="col-lg-12 col-md-6 col-sm-7">
            <h2>Chi tiết đơn hàng</h2>
            <ul class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Admin")">Trang chủ</a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "DonDatHang")">Quản lý thành viên</a></li>
                <li class="breadcrumb-item active">Danh sách thành viên</li>
            </ul>
        </div>
    </div>
</div>
<!--/h-->
<!--Body-->
<!--HHH-->
<div class="row clearfix">
    <div class="col-lg-12">
        <div class="card">
            <div class="header">
                <h2> Danh sách quản trị viên  </h2>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"> <i class="zmdi zmdi-more-vert"></i> </a>
                        <ul class="dropdown-menu pull-right" x-placement="bottom-start" style="position: absolute; transform: translate3d(0px, 33px, 0px); top: 0px; left: 0px; will-change: transform;">
                            <li><a href="javascript:void(0);">Action</a></li>
                            <li><a href="javascript:void(0);">Another action</a></li>
                            <li><a href="javascript:void(0);">Something else</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="body">
                <div class="table-responsive">
                    <div>
                        <h7>
                            @Html.ActionLink("Thêm thành viên", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })
                       
                        </h7>
                    </div>
                    <table class="table table-bordered table-striped table-hover js-basic-example dataTable">
                        <thead>
                            <tr>
                                <th>No.</th>
                                <th>Tài khoản</th>
                                <th>Điện thoại</th>
                                <th>Email</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>No.</th>
                                <th>Tài khoản</th>
                                <th>Điện thoại</th>
                                <th>Email</th>
                                <th>Thao tác</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @{int i = 1;}
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@i</td>

                                    <td>@item.UserName</td>


                                    <td>@item.PhoneNumber</td>

                                    @*@Html.ActionLink(item.HotenAdmin, "InfoAdmin", new { id = item.Id })*@

                                    @*<td>
                                            @Html.DisplayFor(modelItem => item.EmailAdmin)
                                        </td>*@
                                    <td>@item.Email</td>
                                    <td>

                                        @Html.ActionLink("Sửa thông tin", "Edit", new { Id = item.Id }, null) |

                                        @Html.ActionLink("Sửa quyền", "EditRole", new { Id = item.Id }, null) |

                                        @Html.ActionLink("Xóa", "Delete", new { Id = item.Id }, null)

                                    </td>
                                </tr>
                                i++;
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
